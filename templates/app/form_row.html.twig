<div class="form-group row mb-2">
    {{ form_label(form, null, {label_attr: {class: 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form) }}
        {{ form_errors(form) }}

        {% if form_help is defined and form_help %}
            <small class="form-text" data-role="explanation">
                {{ form_help|raw }}
            </small>
        {% endif %}
    </div>
</div>
