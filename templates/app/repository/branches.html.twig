{% extends 'app/app.base.html.twig' %}

{% block page_content %}
    <div class="mt-2 pb-3">
        <h2 class="float-start pe-3">!DRCore</h2>

        <ul class="nav nav-pills float-start">
            <li class="nav-item">
                <a class="nav-link"
                   href="{{ path('DR\\Review\\Controller\\App\\Reviews\\ReviewsController', {id: revisionsModel.repository.id}) }}">
                    {{ 'reviews'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   href="{{ path('DR\\Review\\Controller\\App\\Revision\\RevisionsController', {id: reviewsModel.repository.id}) }}">
                    {{ 'revisions'|trans }}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#">{{ 'branches'|trans }}</a>
            </li>
        </ul>
    </div>

    {%- include 'app/revision/revisions.searchbar.html.twig' with {searchQuery: revisionsModel.searchQuery} -%}
    {%- include 'app/revision/revisions.entities.html.twig' with {revisions: revisionsModel.revisions} -%}
    {%- include 'app/paginator/paginator.html.twig' with {paginatorModel: revisionsModel.paginator} -%}

{% endblock %}

<ul>
{% for branch in branches %}
    <li>{{ branch }}</li>
{% endfor %}
</ul>
