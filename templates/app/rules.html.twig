{% extends 'app/app.base.html.twig' %}

{% block page_content %}

    <h1 class="mt-2">{{ 'Rules'|trans }}</h1>

    {% if rulesModel.message %}
        <div class="alert alert-success" role="alert">
            {{ rulesModel.message }}
        </div>
    {% endif %}

    {% if rulesModel.rules %}
        <table class="table table-bordered table-hover rule-table">
            <thead>
            <tr>
                <th scope="col">{{ 'Name'|trans }}</th>
                <th scope="col">{{ 'Active'|trans }}</th>
                <th scope="col">{{ 'Frequency'|trans }}</th>
                <th scope="col">{{ 'Theme'|trans }}s</th>
                <th scope="col">{{ 'Options'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for rule in rulesModel.rules %}
                <tr>
                    <td>{{ rule.name }}</td>
                    <td>
                        {% if rule.active %}
                            {{ 'Active'|trans }}
                        {% else %}
                            {{ 'Inactive'|trans }}
                        {% endif %}
                    </td>

                    <td>{{ rule.ruleOptions.frequency|trans }}</td>

                    <td>{{ rule.ruleOptions.theme|trans }}</td>

                    <td class="rule-table-options">
                        <a href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RuleController', {id: rule.id}) }}"
                           class="btn btn-success">
                            <i class="bi-pencil-square"></i>
                        </a>

                        <form method="POST"
                              class="d-inline-block"
                              action="{{ path('DR\\GitCommitNotification\\Controller\\App\\DeleteRuleController', {id: rule.id}) }}"
                              onsubmit="return confirm('{{ 'Are you sure you want to delete this rule?'|trans|e('js')|e('html') }}');">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RuleController') }}" class="btn btn-outline-primary">
            <i class="bi-plus"></i>
            {{ 'New rule'|trans }}
        </a>

    {% else %}

    {% endif %}




{% endblock %}
