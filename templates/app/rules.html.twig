{% extends 'app/app.base.html.twig' %}

{% block page_content %}

    {% if app.session.flashbag.peek('success')|length > 0 %}
        <div class="alert alert-success mt-2">
            {% for message in app.flashes('success') %}
                <div>{{ message }}</div>
            {% endfor %}
        </div>
    {% endif %}

    {% if rulesModel.rules %}
        <h1 class="mt-2">{{ 'Rules'|trans }}</h1>

        <table class="table table-bordered table-hover rule-table">
            <thead>
            <tr>
                <th scope="col">{{ 'Name'|trans }}</th>
                <th scope="col">{{ 'Active'|trans }}</th>
                <th scope="col">{{ 'Frequency'|trans }}</th>
                <th scope="col">{{ 'Theme'|trans }}s</th>
                <th scope="col">{{ 'Options'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for rule in rulesModel.rules %}
                <tr>
                    <td>{{ rule.name }}</td>
                    <td>
                        {% if rule.active %}
                            {{ 'Active'|trans }}
                        {% else %}
                            {{ 'Inactive'|trans }}
                        {% endif %}
                    </td>

                    <td>{{ rule.ruleOptions.frequency|trans }}</td>

                    <td>{{ rule.ruleOptions.theme|trans }}</td>

                    <td class="rule-table-options">
                        <a href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RuleController', {id: rule.id}) }}"
                           title="{{ 'rule.edit.title'|trans }}"
                           class="btn btn-success">
                            <i class="bi-pencil-square"></i>
                        </a>

                        <form method="POST" class="d-inline-block"
                              action="{{ path('DR\\GitCommitNotification\\Controller\\App\\DeleteRuleController', {id: rule.id}) }}"
                              title="{{ 'rule.delete.title'|trans }}"
                              onsubmit="return confirm('{{ 'Are you sure you want to delete this rule?'|trans|e('js')|e('html') }}');">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RuleController') }}" class="btn btn-outline-primary">
            <i class="bi-plus"></i>
            {{ 'rule.new'|trans }}
        </a>

    {% else %}
        <div class="jumbotron mt-5">
            <h1 class="display-4">{{ 'rules.welcome.banner'|trans }}</h1>
            <p class="lead">{{ 'rules.welcome.description'|trans }}</p>
            <hr class="my-4">
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RuleController') }}">
                    {{ 'rules.add.first.rule'|trans }}
                </a>
            </p>
        </div>
    {% endif %}

{% endblock %}
