{% use "app/review/review.timeline.entry.html.twig" %}

{# timelineViewModel: TimelineViewModel #}

<div class="review-timeline__overview">
    {% for entry in timelineViewModel.entries %}
        {% set activity = entry.activities|first %}

        <div class="review-timeline__entry">
            <img src="data:image/svg+xml;base64,"
                 width="15"
                 height="15"
                 alt="time-point"
                 style="vertical-align: baseline"/>
            <span>{{ entry.message|raw }}</span>
            <span class="text-secondary small">{{ activity.createTimestamp|format_datetime('short', 'short') }}</span>
        </div>

    {% endfor %}
</div>
