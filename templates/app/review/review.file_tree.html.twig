{% macro recursiveFileTree(directory) %}
    {% import _self as self %}

    {% if directory.directories|length %}
        <ul class="review-file-tree--directories text-nowrap">
            {% for subdirectory in directory.directories %}
                <li class="review-file-tree--directory">
                    <i class="bi bi-folder-fill icon-directory"></i> {{ subdirectory.name }}
                    {{ self.recursiveFileTree(subdirectory) }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if directory.files|length %}
        <ul class="review-file-tree--files">
            {% for file in directory.files %}
                <li class="review-file-tree--file">

                    {%- if file.added -%}
                        <span class="diff-file__file-change-state text-success">+</span>
                    {%- elseif file.deleted -%}
                        <span class="diff-file__file-change-state text-danger">-</span>
                    {%- elseif file.modified -%}
                        <span class="diff-file__file-change-state text-primary">*</span>
                    {%- endif -%}

                    <i class="bi bi-file-earmark-code-fill icon-file"></i>

                    <a href="?filePath={{ file.file.pathname|e('url') }}">
                        {{ file.filename }}
                    </a>

                    <span class="review-file-tree--lines-modified float-end">
                        {% if file.nrOfLinesAdded > 0 %}
                            <span class="bold text-success">+{{ file.nrOfLinesAdded }}</span>
                        {% endif %}
                        {% if file.nrOfLinesRemoved > 0 %}
                            <span class="bold text-danger">-{{ file.nrOfLinesRemoved }}</span>
                        {% endif %}
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}
