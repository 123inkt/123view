{% if paginatorModel.lastPage > 1 %}
    <nav class="mt-3">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="?page=1&search={{ paginatorModel.searchQuery|e('url') }}">
                    <span>&laquo;</span>
                </a>
            </li>

            {% set firstPage = max(1, paginatorModel.page - 10) %}
            {% set lastPage = min(paginatorModel.lastPage, paginatorModel.page + 10) %}
            {% for i in range(firstPage, lastPage) %}
                <li class="page-item  {{ paginatorModel.page == i ? 'active' : '' }}">
                    <a class="page-link" href="?page={{ i }}&search={{ paginatorModel.searchQuery|e('url') }}">{{ i }}</a>
                </li>
            {% endfor %}
            <li class="page-item">
                <a class="page-link" href="?page={{ paginatorModel.lastPage }}&search={{ paginatorModel.searchQuery|e('url') }}">
                    <span>&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endif %}
