<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>
        {%- if page_title is defined -%}{{ page_title }} - {% endif -%}
        Git Commit Notification </title>

    <!-- bootstrap stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- bootstrap utilities -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap-utilities.min.css"
          integrity="sha384-s2Fi6jgHofxQvwyJO3+1JpaE49YOV6Q/QaTGb0Iy1JCLXWQx8BTM7LCX+T0x8OYz" crossorigin="anonymous">
    <!-- bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
          integrity="sha384-YdM/o2MTG+kIKs1sV/gSEWXZo5d1DdBeuo/6s8qMJd5I5FKkStdHSXeNukljrWUZ" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js" defer></script>

    <link href="{{ asset('/assets/styles/main.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/styles/review.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/styles/upsource.css') }}" rel="stylesheet">
</head>
<body>

<header class="navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand mr-0 header-nav-brand" href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RulesController') }}"
       aria-label="Git commit notification" title="Git commit notification">
        DR
    </a>
    <a class="navbar-brand" href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RulesController') }}">eview</a>

    {% if app.user %}
        <div class="navbar-nav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" aria-label="{{ 'Projects'|trans }}" title="{{ 'Projects'|trans }}"
                       href="{{ path('DR\\GitCommitNotification\\Controller\\App\\Review\\ProjectsController') }}">
                        {{ 'Projects'|trans }}
                    </a>
                </li>

                {%- if breadcrumbs is defined -%}
                    {%- for breadcrumb in breadcrumbs -%}
                        <li class="nav-item">
                           <a class="nav-link" href="{{ breadcrumb.url }}">{{ breadcrumb.label }}</a>
                        </li>
                    {%- endfor -%}
                {%- endif -%}

                <li class="nav-item">
                    <a class="nav-link" aria-label="{{ 'Notifications'|trans }}" title="{{ 'Notifications'|trans }}"
                       href="{{ path('DR\\GitCommitNotification\\Controller\\App\\RulesController') }}">
                        {{ 'Notifications'|trans }}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" aria-label="{{ 'Logout'|trans }}" title="{{ 'Logout'|trans }}"
                       href="{{ path('DR\\GitCommitNotification\\Controller\\Auth\\LogoutController') }}">
                        <i class="bi-box-arrow-right"></i>
                    </a>
                </li>
            </ul>
        </div>
    {% endif %}
</header>

{%- block page %}{% endblock -%}

<script>
    window.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('[data-controller]').forEach(async (el) => {
            const module = await import('/assets/js/' + el.dataset.controller + '.js');

            // instantiate module and notify controller
            new module.default(el).connect();
        });
    })
</script>
</body>
</html>
