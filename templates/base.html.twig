<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>
        {%- if page_title is defined -%}{{ page_title }} - {% endif -%}{{- app_name -}}
    </title>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net/"/>
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com/"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {#- bootstrap stylesheet -#}
    {%- if app.user and app.user.setting.colorTheme == 'dark' -%}
        {%- include 'base.head.dark.html.twig' -%}
    {%- elseif app.user and app.user.setting.colorTheme == 'light' -%}
        {%- include 'base.head.light.html.twig' -%}
    {%- else -%}
        <meta name="color-scheme" content="light dark">
        {%- include 'base.head.dark.html.twig' with {media: '(prefers-color-scheme: dark)'} -%}
        {%- include 'base.head.light.html.twig' with {media: '(prefers-color-scheme: no-preference), (prefers-color-scheme: light)'} -%}
    {%- endif -%}

    {#- bootstrap utilities -#}
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap-utilities.min.css"
          integrity="sha384-s2Fi6jgHofxQvwyJO3+1JpaE49YOV6Q/QaTGb0Iy1JCLXWQx8BTM7LCX+T0x8OYz"
          crossorigin="anonymous">
    {#- bootstrap icons -#}
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
          integrity="sha384-YdM/o2MTG+kIKs1sV/gSEWXZo5d1DdBeuo/6s8qMJd5I5FKkStdHSXeNukljrWUZ"
          crossorigin="anonymous">

    {#- axios -#}
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js" defer></script>

    {#- application -#}
    <link href="{{ asset('/assets/styles/main.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/styles/review.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/styles/review.revisions.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/styles/review-file-diff.css') }}" rel="stylesheet">
    <link href="{{ asset('/assets/styles/comment.css') }}" rel="stylesheet">
</head>
<body>

{% apply spaceless %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">{{ app_name }}</a>

                {% if is_granted('ROLE_USER') %}
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link"
                                   aria-label="{{ 'projects'|trans }}"
                                   title="{{ 'projects'|trans }}"
                                   href="{{ path('DR\\Review\\Controller\\App\\Review\\ProjectsController') }}">
                                    {{- 'projects'|trans -}}
                                </a>
                            </li>
                            {%- if breadcrumbs is defined -%}
                                {%- for breadcrumb in breadcrumbs -%}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ breadcrumb.url }}">{{ breadcrumb.label }}</a>
                                    </li>
                                {%- endfor -%}
                            {%- endif -%}
                        </ul>

                        <div class="navbar-nav d-flex">
                            <ul class="navbar-nav">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="nav-item">
                                        <a class="nav-link"
                                           aria-label="{{ 'users'|trans }}"
                                           title="{{ 'users'|trans }}"
                                           href="{{ path('DR\\Review\\Controller\\App\\User\\UsersController') }}">
                                            {{- 'users'|trans -}}

                                            {% set new_user_count = new_user_count() %}
                                            {% if new_user_count > 0 %}
                                            <span class="ms-1 badge rounded-pill bg-success"
                                                  title="{{ 'users.new.user.waiting.for.approval'|trans({count: new_user_count}) }}"
                                            >+{{ new_user_count }}</span>
                                            {% endif %}
                                        </a>
                                    </li>
                                {% endif %}
                                <li class="nav-item">
                                    <a class="nav-link"
                                       aria-label="{{ 'settings'|trans }}"
                                       title="{{ 'settings'|trans }}"
                                       href="{{ path('DR\\Review\\Controller\\App\\User\\UserSettingController') }}">
                                        {{- 'settings'|trans -}}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"
                                       aria-label="{{ 'notifications'|trans }}"
                                       title="{{ 'notifications'|trans }}"
                                       href="{{ path('DR\\Review\\Controller\\App\\Notification\\RulesController') }}">
                                        {{- 'notifications'|trans -}}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"
                                       aria-label="{{ 'logout'|trans }}"
                                       title="{{ 'logout'|trans }}"
                                       href="{{ path('DR\\Review\\Controller\\Auth\\LogoutController') }}">
                                        <i class="bi-box-arrow-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                {% endif %}
            </div>
        </nav>
    </header>
{% endapply %}

{%- block page %}{% endblock -%}

<script>
    window.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('[data-controller]').forEach(async (el) => {
            const module = await import('/assets/js/' + el.dataset.controller + '.js');

            // instantiate module and notify controller
            new module.default(el).connect();
        });
    })
</script>
</body>
</html>
