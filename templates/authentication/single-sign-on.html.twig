{% extends 'base.html.twig' %}

{% block page %}
    <div style="width: 400px; margin: 100px auto;">
        <h2>{{ 'Sign in' | trans }}</h2>

        <br><br>

        {% if error_message %}
            <div class="alert alert-danger" role="alert">
                {{ error_message }}
            </div>
        {% endif %}

        <a href="{{ azure_ad_url }}" class="btn btn-outline-primary">
            <img src="data:image/svg+xml;base64,"
                 width="12" height="12" alt="microsoft" style="margin-right: 10px; margin-bottom: 4px">
            {{- 'Login in with Active Directory'|trans -}}
        </a>
    </div>
{% endblock %}
