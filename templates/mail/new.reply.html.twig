{%- apply inline_css(source('@styles/upsource.css')) -%}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    </head>
    <body class="mailBody">
    {%- set review = replyCommentModel.review -%}
    {%- set comment = replyCommentModel.comment -%}

    {# mail title #}
    {{- 'mail.new.reply.by.user.on'|trans({userName: comment.user.name}) }}
    <a href="{{ absolute_url(path('DR\\GitCommitNotification\\Controller\\App\\Review\\ReviewController', {id: review.id})) }}"
    >CR-{{ review.projectId }} - {{ review.title }}</a>
    <br><br>

    {%- if replyCommentModel.file != null -%}
        <div class="revisionFileTitle">
            <span class="fileName">{{ replyCommentModel.file.filename }}</span>
            <span class="directoryName">{{ replyCommentModel.file.dirname }}</span>
        </div>
    {%- endif -%}

    {%- set line_nr_length_before = 4 -%}
    {%- set line_nr_length_after = 4 -%}
    {%- if replyCommentModel.file != null and replyCommentModel.linesBefore|length > 0 -%}
        {%- include 'mail/commit/commit.block.html.twig' with {file: replyCommentModel.file, lines: replyCommentModel.linesBefore} -%}
    {% endif %}

    {%- include 'mail/comment/comment.html.twig' with {comment: comment, replies: replyCommentModel.replies} -%}

    {%- if replyCommentModel.file != null and replyCommentModel.linesAfter|length > 0 -%}
        {%- include 'mail/commit/commit.block.html.twig' with {file: replyCommentModel.file, lines: replyCommentModel.linesAfter} -%}
    {% endif %}

    </body>
    </html>
{%- endapply -%}
