<?xml version="1.0" encoding="UTF-8" ?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="../../../../config.xsd">
    <repositories>
        <repository name="sherlock" url="https://example.com/detectives/sherlock.git"/>
    </repositories>
    <rule theme="darcula">
        <name>Detectives</name>
        <subject>My commits</subject>
        <external_links>
            <external_link pattern="B#{}" url="https://example.com/detectives/issue/{}"/>
        </external_links>
        <repositories>
            <repository name="sherlock"/>
        </repositories>
        <recipients>
            <recipient email="sherlock@example.com" name="Sherlock Holmes"/>
        </recipients>
    </rule>
</configuration>
