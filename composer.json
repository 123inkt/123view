{
    "name": "digitalrevolution/review",
    "description": "A code review and commit notification symfony application",
    "keywords": ["git", "commit", "summary", "bundle", "filter", "mail", "notification"],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "process-timeout": 0,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "DR\\Review\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DR\\Review\\Tests\\E2E\\": "tests/E2E",
            "DR\\Review\\Tests\\Integration\\": "tests/Integration",
            "DR\\Review\\Tests\\Unit\\": "tests/Unit",
            "DR\\Review\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "api-platform/core": "^3.1",
        "czproject/git-php": "^4.0",
        "digitalrevolution/symfony-console-validation": "^1.0",
        "digitalrevolution/symfony-request-validation": "^2.0",
        "doctrine/annotations": "^1.13 || ^2.0.0",
        "doctrine/doctrine-bundle": "^2.6",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.12",
        "league/commonmark": "^2.3",
        "league/uri": "^6.8",
        "lolli42/finediff": "^1.0",
        "nesbot/carbon": "^2.64",
        "nette/utils": "^3.2 || ^4.0",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.15",
        "scienta/doctrine-json-functions": "^5.2",
        "scrivo/highlight.php": "^9.18",
        "spatie/commonmark-highlighter": "^3.0",
        "symfony/amqp-messenger": "^6.2",
        "symfony/asset": "^6.2",
        "symfony/config": "^6.2",
        "symfony/console": "^6.2",
        "symfony/doctrine-messenger": "^6.2",
        "symfony/dotenv": "^6.2",
        "symfony/expression-language": "^6.2",
        "symfony/filesystem": "^6.2",
        "symfony/flex": "^v2.2",
        "symfony/form": "^6.2",
        "symfony/framework-bundle": "^6.2",
        "symfony/http-client": "^6.2",
        "symfony/mailer": "^6.2",
        "symfony/mercure-bundle": "^0.3.5",
        "symfony/messenger": "^6.2",
        "symfony/monolog-bundle": "^3.7",
        "symfony/process": "^6.2",
        "symfony/property-access": "^6.2",
        "symfony/property-info": "^6.2",
        "symfony/proxy-manager-bridge": "^6.2",
        "symfony/runtime": "^6.2",
        "symfony/security-bundle": "^6.2",
        "symfony/serializer": "^6.2",
        "symfony/translation": "^6.2",
        "symfony/twig-bundle": "^6.2",
        "symfony/validator": "^6.2",
        "symfony/webpack-encore-bundle": "^1.16",
        "symfony/yaml": "^6.2",
        "thenetworg/oauth2-azure": "^2.0",
        "tijsverkoyen/css-to-inline-styles": "^2.2",
        "twig/extra-bundle": "^3.4",
        "twig/intl-extra": "^3.4",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "digitalrevolution/accessorpair-constraint": "^2.1",
        "digitalrevolution/phpunit-file-coverage-inspection": "^1.1",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "liip/test-fixtures-bundle": "^2.4",
        "mikey179/vfsstream": "^1.6",
        "phpmd/phpmd": "^2.10",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpstan/phpstan-symfony": "^1.1",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.8",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/browser-kit": "^6.2",
        "symfony/debug-bundle": "^6.2",
        "symfony/error-handler": "^6.2",
        "symfony/maker-bundle": "^1.42",
        "symfony/phpunit-bridge": "^6.2",
        "symfony/stopwatch": "^6.2",
        "symfony/var-dumper": "^6.2",
        "symfony/web-profiler-bundle": "^6.2",
        "yep/reflection": "^2.1"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-intl-icu": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-messageformatter": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-intl-idn": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": ["@auto-scripts"],
        "post-update-cmd": ["@auto-scripts"],
        "check": ["@check:phpstan", "@check:phpmd", "@check:phpcs"],
        "check:phpstan": "@php -dxdebug.mode=off vendor/bin/phpstan analyse",
        "check:phpmd": "@php -derror_reporting=24575 vendor/bin/phpmd src,tests text phpmd.xml --suffixes=php",
        "check:phpcs": "@php vendor/bin/phpcs src tests",
        "fix": "@fix:phpcbf",
        "fix:phpcbf": "phpcbf src tests",
        "test": "phpunit",
        "test:e2e": "phpunit --testsuite e2e",
        "test:integration": "phpunit --testsuite integration",
        "test:unit": "phpunit --testsuite unit",
        "test:coverage": [
            "phpunit --coverage-clover coverage.xml",
            "phpfci inspect coverage.xml php://stdout --exit-code-on-failure"
        ],
        "cache:destroy": [
            "@php bin/console cache:clear --env=prod --no-debug",
            "@php bin/console cache:clear --env=dev  --no-debug",
            "@php bin/console cache:clear --env=test --no-debug"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "6.2.*"
        }
    }
}
