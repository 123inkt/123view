{
    "name": "digitalrevolution/review",
    "description": "A code review and commit notification symfony application",
    "keywords": ["git", "commit", "summary", "bundle", "filter", "mail", "notification"],
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "process-timeout": 0,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "DR\\Review\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DR\\Review\\Tests\\Functional\\": "tests/Functional",
            "DR\\Review\\Tests\\Integration\\": "tests/Integration",
            "DR\\Review\\Tests\\Unit\\": "tests/Unit",
            "DR\\Review\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "api-platform/core": "^3.1",
        "czproject/git-php": "^4.0",
        "digitalrevolution/jbdiff": "^1.0",
        "digitalrevolution/symfony-console-validation": "^1.0",
        "digitalrevolution/symfony-request-validation": "^2.0",
        "digitalrevolution/symfony-trace-bundle": "^0.5",
        "digitalrevolution/utils": "^1.0",
        "doctrine/doctrine-bundle": "^2.6",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.12 || ^3.0",
        "fdekker/commonmark-ext-emoji": "^1.0",
        "fdekker/log-viewer-bundle": "^0.7",
        "league/commonmark": "^2.3",
        "league/oauth2-client": "^2.7",
        "league/uri": "^7.0",
        "nesbot/carbon": "^3.0@dev",
        "nette/utils": "^4.0",
        "parsica-php/parsica": "^0.8.1",
        "phpdocumentor/reflection-docblock": "^5.3",
        "scienta/doctrine-json-functions": "^5.2",
        "spatie/commonmark-highlighter": "^3.0",
        "symfony/amqp-messenger": "^7.0",
        "symfony/asset": "^7.0",
        "symfony/config": "^7.0",
        "symfony/console": "^7.0",
        "symfony/doctrine-messenger": "^7.0",
        "symfony/dotenv": "^7.0",
        "symfony/expression-language": "^7.0",
        "symfony/filesystem": "^7.0",
        "symfony/flex": "^v2.2",
        "symfony/form": "^7.0",
        "symfony/framework-bundle": "^7.0",
        "symfony/http-client": "^7.0",
        "symfony/mailer": "^7.0",
        "symfony/mercure-bundle": "^0.3.7",
        "symfony/messenger": "^7.0",
        "symfony/monolog-bundle": "^3.7",
        "symfony/process": "^7.0",
        "symfony/property-access": "^7.0",
        "symfony/property-info": "^7.0",
        "symfony/proxy-manager-bridge": "^6.4",
        "symfony/runtime": "^7.0",
        "symfony/security-bundle": "^7.0",
        "symfony/serializer": "^7.0",
        "symfony/stimulus-bundle": "^2.9",
        "symfony/string": "^7.0",
        "symfony/translation": "^7.0",
        "symfony/twig-bundle": "^7.0",
        "symfony/validator": "^7.0",
        "symfony/webhook": "^7.0",
        "symfony/webpack-encore-bundle": "^2.0",
        "symfony/yaml": "^7.0",
        "thenetworg/oauth2-azure": "^2.0",
        "tijsverkoyen/css-to-inline-styles": "^2.2",
        "twig/extra-bundle": "^3.4",
        "twig/intl-extra": "^3.4",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "digitalrevolution/accessorpair-constraint": "^2.1.18",
        "digitalrevolution/phpunit-extensions": "^1.0",
        "digitalrevolution/phpunit-file-coverage-inspection": "^2.0",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "liip/test-fixtures-bundle": "^2.4",
        "mikey179/vfsstream": "^1.6",
        "phpmd/phpmd": "^2.15",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10.50",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-symfony": "^1.3",
        "phpunit/phpunit": "11.0.*",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^8.8",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/browser-kit": "^7.0",
        "symfony/debug-bundle": "^7.0",
        "symfony/error-handler": "^7.0",
        "symfony/maker-bundle": "^1.48",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/stopwatch": "^7.0",
        "symfony/var-dumper": "^7.0",
        "symfony/web-profiler-bundle": "^7.0",
        "yep/reflection": "^2.1"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-intl-icu": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-messageformatter": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-intl-idn": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": ["@auto-scripts"],
        "post-update-cmd": ["@auto-scripts"],
        "check": ["@check:phpstan", "@check:phpmd", "@check:phpcs"],
        "check:phpstan": "@php -dxdebug.mode=off vendor/bin/phpstan analyse",
        "check:phpmd": "@php vendor/bin/phpmd src,tests text phpmd.xml --cache --cache-file var/.phpmd.result-cache.php",
        "check:phpcs": "@php vendor/bin/phpcs src tests",
        "fix": "@fix:phpcbf",
        "fix:phpcbf": "phpcbf src tests",
        "test": "phpunit",
        "test:functional": "phpunit --testsuite functional",
        "test:integration": "phpunit --testsuite integration",
        "test:unit": "phpunit --testsuite unit",
        "test:coverage": [
            "phpunit --testsuite unit --coverage-clover coverage.xml",
            "phpfci inspect coverage.xml --reportText --exit-code-on-failure"
        ],
        "cache:destroy": [
            "@php bin/console cache:clear --env=prod --no-debug",
            "@php bin/console cache:clear --env=dev  --no-debug",
            "@php bin/console cache:clear --env=test --no-debug"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.0.*"
        }
    }
}
